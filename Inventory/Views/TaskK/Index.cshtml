@model IEnumerable<Project.MODELS.Entities.Task>

<h2>Task List</h2>

<table class="table">
    <thead>
        <tr>
            <th>Task Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Name</td>
                <td>@task.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })" class="btn btn-primary">Edit</a>
                    <a href="@Url.Action("Details", new { id = task.Id })" class="btn btn-info">Details</a>
                    <a href="@Url.Action("Delete", new { id = task.Id })" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-success">Create New Task</a>
